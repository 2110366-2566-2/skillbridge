// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  salutation      String
  firstname       String
  middlename      String?
  lastname        String
  profileImageUrl String?
  lineId          String?  @unique
  facebook        String?  @unique
  email           String?  @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  Student  Student?
  Employee Employer?
  Job      Job[]
  Applied  Applied[]
  Message  Message[]
}

model Student {
  userId          String   @id @unique
  user            User     @relation(fields: [userId], references: [id])
  resumeUrl       String?
  transcriptUrl   String?
  bankAccountName String? //enum
  bankAccountNo   String?
  avgStar         Float?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  transaction Transaction[]
}

model Employer {
  userId       String   @id @unique
  user         User     @relation(fields: [userId], references: [id])
  position     String
  organization String
  publicEmail  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  transaction Transaction[]
}

model Job {
  id                String    @id @default(uuid())
  userId            String
  user              User      @relation(fields: [userId], references: [id])
  title             String
  status            String //enum
  description       String
  startDate         DateTime?
  endDate           DateTime?
  estimateStartDate DateTime
  estimateEndDate   DateTime
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  jobTags     JobTag[]      @relation("JobTagsRelation")
  Applied     Applied[]
  chatroom    Chatroom[]
  transaction Transaction[]
  Review      Review[]
}

model JobTag {
  id        String   @id @default(uuid())
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  jobs Job[] @relation("JobTagsRelation")
}

model Applied {
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  jobId       String
  job         Job       @relation(fields: [jobId], references: [id])
  bid         Float?
  documentUrl String?
  status      String
  appliedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@id([userId, jobId])
}

model Chatroom {
  id        String   @id @default(uuid())
  jobId     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  job       Job      @relation(fields: [jobId], references: [id])

  Message Message[]
}

model Message {
  id         String    @id @default(uuid())
  timestamp  DateTime
  chatroomId String
  chatroom   Chatroom  @relation(fields: [chatroomId], references: [id])
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  unsentAt   DateTime?

  Text  Text[]
  Image Image[]
}

model Text {
  messageId String   @id
  message   Message  @relation(fields: [messageId], references: [id])
  text      String
  createdAt DateTime @default(now())
}

model Image {
  messageId String   @id
  message   Message  @relation(fields: [messageId], references: [id])
  imageUrl  String
  createdAt DateTime @default(now())
}

model Transaction {
  id              String   @id @default(uuid())
  jobId           String
  job             Job      @relation(fields: [jobId], references: [id])
  employerId      String
  employer        Employer @relation(fields: [employerId], references: [userId])
  studentId       String
  student         Student  @relation(fields: [studentId], references: [userId])
  paymentId       String? // need revise
  receiptImageUrl String?
  PaymentType     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Review {
  // employerId String
  // employer   Employer @relation(fields: [employerId], references: [userId])
  // studentId  String
  // student    Student  @relation(fields: [studentId], references: [userId])
  id          String   @id @default(uuid())
  jobId       String
  job         Job      @relation(fields: [jobId], references: [id])
  description String
  Stars       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
